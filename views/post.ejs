<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1>QUORA POSTS</h1>
    <div class="container">
        <% posts.forEach(function(post) { %>
            <div class="post">
                <h3>
                    @<%= post.user %>
                </h3>
                <h4>
                    <%= post.desc %>
                </h4>
                <a href="http://localhost:4050/posts/<%=post.id%>/edit" id="edit">Edit post</a>
              <a href="http://localhost:4050/posts/<%=post.id%>" id="seemore">See in details</a>
            </div>
        <% }) %>
        <a href="http://localhost:4050/posts/new" id="create">Create new post</a>
    </div>
</body>

</html>
